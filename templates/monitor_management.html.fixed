        function collectReportData() {
            const selectedHost = document.getElementById('report-host-filter').value;
            const host_ips = selectedHost ? [selectedHost] : [];
            let startDate = '', endDate = '';
            

            const timeRange = document.getElementById('report-time-range').value;
            if (timeRange === 'custom') {
                startDate = document.getElementById('report-start-date').value;
                endDate = document.getElementById('report-end-date').value;
                if (!startDate || !endDate) {
                    showNotification('è¯·é€‰æ‹©å¼€å§‹æ—¥æœŸå’Œç»“æŸæ—¥æœŸ', 'error');
                    return null;
                }
            } else {
                const now = new Date();
                switch (timeRange) {
                    case 'today':
                        startDate = now.toISOString().split('T')[0];
                        endDate = startDate;
                        break;
                    case 'yesterday':
                        const yesterday = new Date(now);
                        yesterday.setDate(yesterday.getDate() - 1);
                        startDate = yesterday.toISOString().split('T')[0];
                        endDate = startDate;
                        break;
                    case 'week':
                        const weekAgo = new Date(now);
                        weekAgo.setDate(weekAgo.getDate() - 7);
                        startDate = weekAgo.toISOString().split('T')[0];
                        endDate = now.toISOString().split('T')[0];
                        break;
                    case 'month':
                        const monthAgo = new Date(now);
                        monthAgo.setDate(monthAgo.getDate() - 30);
                        startDate = monthAgo.toISOString().split('T')[0];
                        endDate = now.toISOString().split('T')[0];
                        break;
                }
            }
            
            // åªè·å–ç¬¬ä¸€ä¸ªé€‰ä¸­çš„ä¸»æœºï¼ˆåç«¯é™åˆ¶ï¼‰
            const selectedHosts = Array.from(document.querySelectorAll('#host-selection-list input[type="checkbox"]:checked'))
                .map(checkbox => checkbox.value)
                .filter(ip => ip !== '');
            
            // è·å–æŠ¥å‘Šæ ‡é¢˜
            const reportTitle = document.getElementById('report-title').value || 'æœåŠ¡å™¨ç›‘æ§æŠ¥å‘Š';
            
            return {
                start_date: startDate,
                end_date: endDate,
                host_ips: selectedHosts,
                title: reportTitle
            };
        }

        function generateReportWithAPI(reportData) {
            return new Promise((resolve, reject) => {
                // æ„å»ºæŸ¥è¯¢å‚æ•°
                const params = new URLSearchParams({
                    start_date: reportData.start_date,
                    end_date: reportData.end_date,
                    title: reportData.title,
                    type: 'html',
                    template: 'summary'
                });
                
                // åªå‘é€ç¬¬ä¸€ä¸ªé€‰ä¸­çš„ä¸»æœºIPï¼ˆåç«¯åªæ”¯æŒå•ä¸ªä¸»æœºï¼‰
                if (reportData.host_ips.length > 0) {
                    params.append('host_ip', reportData.host_ips[0]);
                }
                
                fetch(`/api/export/report?${params.toString()}`)
                    .then(response => {
                        console.log('æŠ¥å‘ŠAPIå“åº”çŠ¶æ€:', response.status);
                        console.log('å“åº”ç±»å‹:', response.headers.get('content-type'));
                        
                        if (!response.ok) {
                            throw new Error(`HTTPé”™è¯¯! çŠ¶æ€ç : ${response.status}`);
                        }
                        
                        // æ£€æŸ¥å“åº”ç±»å‹
                        const contentType = response.headers.get('content-type') || '';
                        
                        if (contentType.includes('application/json')) {
                            // å¦‚æœæ˜¯JSONå“åº”ï¼Œè¯´æ˜æ˜¯é”™è¯¯ä¿¡æ¯
                            return response.json().then(data => {
                                if (data.success === false) {
                                    throw new Error(data.message || 'æŠ¥å‘Šç”Ÿæˆå¤±è´¥');
                                }
                                resolve(data);
                            });
                        } else if (contentType.includes('text/html')) {
                            // å¦‚æœæ˜¯HTMLå“åº”ï¼Œè¯´æ˜æ˜¯æŠ¥å‘Šå†…å®¹
                            return response.text().then(htmlContent => {
                                resolve({
                                    success: true,
                                    report_content: htmlContent,
                                    message: 'æŠ¥å‘Šç”ŸæˆæˆåŠŸ'
                                });
                            });
                        } else {
                            // æœªçŸ¥çš„å“åº”ç±»å‹
                            throw new Error(`æœªçŸ¥çš„å“åº”ç±»å‹: ${contentType}`);
                        }
                    })
                    .catch(error => {
                        console.error('æŠ¥å‘ŠAPIè°ƒç”¨å¤±è´¥:', error);
                        reject(error);
                    });
            });
        }


        function handleReportDownload(response) {
            if (response.report_content) {
                // åˆ›å»ºHTMLæŠ¥å‘Šä¸‹è½½
                const blob = new Blob([response.report_content], { type: 'text/html; charset=utf-8' });
                const url = window.URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.style.display = 'none';
                a.href = url;
                a.download = `ç›‘æ§æŠ¥å‘Š_${new Date().toISOString().slice(0, 19).replace(/:/g, '-')}.html`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                // å¯é€‰ï¼šåœ¨æ–°æ ‡ç­¾é¡µæ‰“å¼€é¢„è§ˆ
                setTimeout(() => {
                    const previewWindow = window.open('', '_blank');
                    previewWindow.document.write(response.report_content);
                    previewWindow.document.close();
                }, 500);
            } else if (response.report_url) {
                // å¦‚æœåç«¯è¿”å›æŠ¥å‘ŠURLï¼Œç›´æ¥æ‰“å¼€
                window.open(response.report_url, '_blank');
            } else {
                console.error('æŠ¥å‘Šå“åº”æ ¼å¼é”™è¯¯:', response);
                showNotification('æŠ¥å‘Šæ ¼å¼é”™è¯¯ï¼Œè¯·è”ç³»ç®¡ç†å‘˜', 'error');
            }
        }



        function simulateReportProgress() {
