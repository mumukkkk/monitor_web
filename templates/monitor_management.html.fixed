        function exportData() {
            if (exportInProgress) return;
            
            const exportType = document.getElementById('export-type').value;
            const timeRange = document.getElementById('time-range').value;
            let startDate = '', endDate = '';
            
            // æ ¹æ®æ—¶é—´èŒƒå›´è®¾ç½®æ—¥æœŸï¼ˆæ‚¨çš„ä»£ç è¿™éƒ¨åˆ†æ˜¯æ­£ç¡®çš„ï¼‰
            if (timeRange === 'custom') {
                startDate = document.getElementById('export-start-date').value;
                endDate = document.getElementById('export-end-date').value;
                if (!startDate || !endDate) {
                    alert('è¯·é€‰æ‹©å¼€å§‹æ—¥æœŸå’Œç»“æŸæ—¥æœŸ');
                    return;
                }
            } else {
                // é¢„è®¾æ—¶é—´èŒƒå›´é€»è¾‘ï¼ˆä¿æŒä¸å˜ï¼‰
                const now = new Date();
                switch (timeRange) {
                    case 'today':
                        startDate = now.toISOString().split('T')[0];
                        endDate = startDate;
                        break;
                    case 'yesterday':
                        const yesterday = new Date(now);
                        yesterday.setDate(yesterday.getDate() - 1);
                        startDate = yesterday.toISOString().split('T')[0];
                        endDate = startDate;
                        break;
                    case 'week':
                        const weekAgo = new Date(now);
                        weekAgo.setDate(weekAgo.getDate() - 7);
                        startDate = weekAgo.toISOString().split('T')[0];
                        endDate = now.toISOString().split('T')[0];
                        break;
                    case 'month':
                        const monthAgo = new Date(now);
                        monthAgo.setDate(monthAgo.getDate() - 30);
                        startDate = monthAgo.toISOString().split('T')[0];
                        endDate = now.toISOString().split('T')[0];
                        break;
                }
            }
            
            const ipFilter = document.getElementById('export-ip-filter').value;
            
            exportInProgress = true;
            const confirmBtn = document.querySelector('#export-modal .btn-primary');
            const originalText = confirmBtn.innerHTML;
            confirmBtn.innerHTML = 'å¯¼å‡ºä¸­...';
            confirmBtn.disabled = true;
            
            // ä¿®å¤ï¼šä½¿ç”¨æ­£ç¡®çš„åç«¯APIç«¯ç‚¹
            const apiUrl = exportType === 'excel' ? '/api/export/excel' : '/api/export/csv';
            
            // æ„å»ºæŸ¥è¯¢å‚æ•°
            const params = new URLSearchParams({
                start_date: startDate,
                end_date: endDate
            });
            
            if (ipFilter) {
                params.append('ip', ipFilter);
            }
            
            // æ·»åŠ è°ƒè¯•ä¿¡æ¯
            console.log(`å¯¼å‡ºè¯·æ±‚: ${apiUrl}?${params.toString()}`);
            
            let fetchResponse;

            // æ­£ç¡®çš„APIè°ƒç”¨ï¼ˆGETè¯·æ±‚ï¼‰
            fetch(`${apiUrl}?${params.toString()}`)
                .then(response => {
                    fetchResponse = response;
                    console.log(`å“åº”çŠ¶æ€: ${response.status}, å“åº”ç±»å‹: ${response.headers.get('content-type')}`);
                    
                    // æ£€æŸ¥å“åº”çŠ¶æ€ç 
                    if (!response.ok) {
                        // å¦‚æœæ˜¯4xxæˆ–5xxé”™è¯¯ï¼Œå°è¯•è¯»å–é”™è¯¯ä¿¡æ¯
                        if (response.status >= 400) {
                            return response.text().then(errorText => {
                                console.error('é”™è¯¯å“åº”å†…å®¹:', errorText);
                                // å°è¯•è§£æJSONé”™è¯¯
                                try {
                                    const errorData = JSON.parse(errorText);
                                    throw new Error(errorData.message || `å¯¼å‡ºå¤±è´¥: ${response.status}`);
                                } catch (e) {
                                    // å¦‚æœä¸æ˜¯JSONï¼Œä½¿ç”¨åŸå§‹é”™è¯¯æ–‡æœ¬
                                    throw new Error(`å¯¼å‡ºå¤±è´¥: ${response.status} - ${errorText.substring(0, 100)}`);
                                }
                            });
                        }
                        throw new Error(`HTTPé”™è¯¯! çŠ¶æ€ç : ${response.status}`);
                    }
                    
                    // æ£€æŸ¥å“åº”ç±»å‹
                    const contentType = response.headers.get('content-type') || '';

                    // å¦‚æœæ˜¯JSONå“åº”ï¼Œè¯´æ˜æ˜¯é”™è¯¯
                    if (contentType.includes('application/json')) {
                        return response.json().then(data => {
                            if (data.success === false) {
                                throw new Error(data.message || 'å¯¼å‡ºå¤±è´¥');
                            }
                            throw new Error('æ„å¤–çš„JSONå“åº”æ ¼å¼');
                        });
                    }

                    // å¦‚æœæ˜¯Excelæ–‡ä»¶ï¼Œæ­£å¸¸å¤„ç†
                    if (contentType.includes('application/vnd.openxmlformats-officedocument.spreadsheetml.sheet') || 
                        contentType.includes('application/octet-stream')) {
                        return response.blob();
                    }

                    // å¦‚æœæ˜¯CSVæ–‡ä»¶ï¼Œæ­£å¸¸å¤„ç†
                    if (contentType.includes('text/csv') || contentType.includes('text/plain')) {
                        return response.blob();
                    }

                    // æœªçŸ¥çš„å“åº”ç±»å‹
                    throw new Error(`æœªçŸ¥çš„å“åº”ç±»å‹: ${contentType}`);

                })
                .then(blob => {
                    if (!blob) return;
                    
                    console.log(`ä¸‹è½½æ–‡ä»¶å¤§å°: ${blob.size} bytes`);
                    
                    // åˆ›å»ºä¸‹è½½é“¾æ¥
                    const url = window.URL.createObjectURL(blob);
                    const a = document.createElement('a');
                    a.style.display = 'none';
                    a.href = url;
                    
                    // ä»å“åº”å¤´è·å–æ–‡ä»¶å
                    const contentDisposition = fetchResponse.headers.get('Content-Disposition');
                    let filename = `ç›‘æ§æ•°æ®_${new Date().toISOString().slice(0, 19).replace(/:/g, '-')}`;

                    if (contentDisposition) {
                        const filenameMatch = contentDisposition.match(/filename\\*=UTF-8''(.+)/);
                        if (filenameMatch) {
                            filename = decodeURIComponent(filenameMatch[1]);
                        } else {
                            const simpleMatch = contentDisposition.match(/filename=\"(.+)\"/);
                            if (simpleMatch) {
                                filename = simpleMatch[1];
                            }
                        }
                    } else {
                        // é»˜è®¤æ–‡ä»¶å
                        if (exportType === 'excel') {
                            filename += '.xlsx';
                        } else {
                            filename += '.csv';
                        }
                    }

                    
                    a.download = filename;
                    document.body.appendChild(a);
                    a.click();
                    window.URL.revokeObjectURL(url);
                    document.body.removeChild(a);
                    
                    // æ¢å¤æŒ‰é’®çŠ¶æ€
                    exportInProgress = false;
                    confirmBtn.innerHTML = originalText;
                    confirmBtn.disabled = false;
                    closeExportModal();
                    
                    // æ˜¾ç¤ºæˆåŠŸæ¶ˆæ¯
                    showNotification('å¯¼å‡ºæˆåŠŸï¼æ–‡ä»¶å·²å¼€å§‹ä¸‹è½½', 'success');
                })
                .catch(error => {
                    console.error('å¯¼å‡ºå¤±è´¥è¯¦æƒ…:', error);
                    exportInProgress = false;
                    confirmBtn.innerHTML = originalText;
                    confirmBtn.disabled = false;
                    
                    // æ˜¾ç¤ºé”™è¯¯æ¶ˆæ¯
                    showNotification(`å¯¼å‡ºå¤±è´¥: ${error.message}`, 'error');
                });
        }

